<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SimpleProgressBar">
        <!--文字区域最大宽度-->
        <attr name="simple_progressbar_textMaxWidth" format="dimension" />
        <!--进度条绘制区域高度-->
        <attr name="simple_progressbar_progressHeight" format="dimension" />
        <!--文字大小-->
        <attr name="simple_progressbar_textSize" format="dimension" />
        <!--文字-->
        <attr name="simple_progressbar_text" format="string" />
        <!--依附于前景或背景绘制-->
        <attr name="simple_progressbar_attachToBackground" format="boolean" />
        <!--文字与进度条之间的距离-->
        <attr name="simple_progressbar_distance" format="dimension" />
        <!--按百分比绘制-->
        <attr name="simple_progressbar_isPercent" format="boolean" />
        <!--圆角-->
        <attr name="simple_progressbar_raduis" format="dimension" />
        <!--总进度-->
        <attr name="simple_progressbar_totalProgress" format="integer" />
        <!--实时进度-->
        <attr name="simple_progressbar_currentProgress" format="integer" />
        <!--文字色-->
        <attr name="simple_progressbar_textColor" format="color" />
        <!--前景色-->
        <attr name="simple_progressbar_foregroundColor" format="string" />
        <!--背景色-->
        <attr name="simple_progressbar_backgroundColor" format="color" />
    </declare-styleable>


    <declare-styleable name="SimpleDeformationBackgroundView">
        <!--文字大小-->
        <attr name="dbv_text_size" format="dimension" />
        <!--文字-->
        <attr name="dbv_text" format="string" />
        <!--文字色-->
        <attr name="dbv_textColor" format="color" />
        <!--背景色-->
        <attr name="dbv_background_color" format="color" />
        <!--文字字体-->
        <attr name="dbv_text_style" format="integer">
            <enum name="bold_typeface" value="0" />
            <enum name="default_typeface" value="1" />

        </attr>

        <!--左侧边是否斜置 为true时radiusLeftTop不可用，默认为0-->
        <attr name="dbv_oblique_left" format="boolean" />
        <!--右侧边是否斜置 为true时radiusRightBottom不可用，默认为0-->
        <attr name="dbv_oblique_right" format="boolean" />
        <!--斜边往内部溃缩量-->
        <attr name="dbv_oblique_offset" format="dimension" />

        <!--右上角圆角-->
        <attr name="dbv_radius_right_top" format="dimension" />
        <!--右下角圆角-->
        <attr name="dbv_radius_right_bottom" format="dimension" />
        <!--左下角圆角-->
        <attr name="dbv_radius_left_bottom" format="dimension" />
        <!--左上角圆角-->
        <attr name="dbv_radius_left_top" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SuperLikeLayout">
        <!--一次喷射的element数量-->
        <attr name="eruption_element_amount" format="integer" />
        <!--最大同时喷射次数-->
        <attr name="max_eruption_total" format="integer" />
        <!--是否显示Emoji表情喷射动画-->
        <attr name="show_emoji" format="boolean" />
        <!--是否显示Combo文字-->
        <attr name="show_text" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SimpleRatingBar">
        <attr name="srb_numStars" format="integer" />
        <attr name="srb_minimumStars" format="float" />
        <attr name="srb_rating" format="float" />
        <attr name="srb_starPadding" format="dimension" />
        <attr name="srb_drawableEmpty" format="reference" />
        <attr name="srb_drawableFilled" format="reference" />
        <attr name="srb_isIndicator" format="boolean" />
        <attr name="srb_scrollable" format="boolean" />
        <attr name="srb_clickable" format="boolean" />
        <attr name="srb_clearRatingEnabled" format="boolean" />
        <attr name="srb_starWidth" format="dimension" />
        <attr name="srb_starHeight" format="dimension" />
        <attr name="srb_stepSize" format="float" />
    </declare-styleable>
    <declare-styleable name="ShadowButtonView">
        <attr name="sbv_text" format="string" />
        <attr name="sbv_textSize" format="dimension" />
        <attr name="sbv_textColor" format="color" />
        <attr name="sbv_maxLines" format="integer" />
        <attr name="sbv_cornerRadius" format="dimension" />
        <attr name="sbv_strokeWidth" format="dimension" />
        <attr name="sbv_strokeColor" format="color" />
        <attr name="sbv_fillColor" format="color" />
        <attr name="sbv_shadowRadius" format="dimension" />
        <attr name="sbv_shadowDx" format="dimension" />
        <attr name="sbv_shadowDy" format="dimension" />
        <attr name="sbv_shadowColor" format="color" />
        <attr name="sbv_autoPadding" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ShadowAlienButtonView">
        <!-- 文本对齐方式：normal/center/opposite -->
        <attr name="sab_textAlignment" format="enum">
            <enum name="normal" value="0" />   <!-- ALIGN_NORMAL -->
            <enum name="center" value="1" />   <!-- ALIGN_CENTER -->
            <enum name="opposite" value="2" /> <!-- ALIGN_OPPOSITE -->
        </attr>
        <!-- 徽标位置 -->
        <attr name="sab_badgePosition" format="enum">
            <enum name="left" value="0" />   <!-- BADGE_LEFT -->
            <enum name="right" value="1" />  <!-- BADGE_RIGHT -->
        </attr>
        <!-- 是否启用徽标 -->
        <attr name="sab_enableBadge" format="boolean" />
        <!-- 最大行数 -->
        <attr name="sab_maxLines" format="integer" />
        <!-- 文本大小 -->
        <attr name="sab_textSize" format="dimension" />
        <!-- 文本颜色 -->
        <attr name="sab_textColor" format="color" />
        <!-- 文本 -->
        <attr name="sab_text" format="string" />
        <!-- 边框宽度 -->
        <attr name="sab_unCheckedStrokeWidth" format="dimension" />
        <attr name="sab_checkedStrokeWidth" format="dimension" />
        <!-- 边框颜色 -->
        <attr name="sab_unCheckedStrokeColor" format="color" />
        <attr name="sab_checkedStrokeColor" format="color" />
        <!-- 填充背景色 -->
        <attr name="sab_checkedFillBgColor" format="color" />
        <attr name="sab_unCheckedFillBgColor" format="color" />
        <!-- 下半部分异形圆角区域颜色 -->
        <attr name="sab_checkedBottomAlienColor" format="color" />
        <attr name="sab_unCheckedBottomAlienFillColor" format="color" />
        <!-- 阴影间隙 -->
        <attr name="sab_shadowGap" format="dimension" />
        <!-- 按压位移量 -->
        <attr name="sab_pressOffset" format="dimension" />

    </declare-styleable>

    <declare-styleable name="SimplePowerBubbleFrameLayout">
        <!-- 圆角半径 -->
        <attr name="bfl_cornerRadius" format="dimension" />
        <!-- 箭头宽度 -->
        <attr name="bfl_arrowWidth" format="dimension" />
        <!-- 箭头高度 -->
        <attr name="bfl_arrowHeight" format="dimension" />
        <!-- 箭头尖端圆角半径（如果需要箭头圆润一些） -->
        <attr name="bfl_arrowCornerRadius" format="dimension" />
        <!-- 箭头所在的边 -->
        <attr name="bfl_arrowSide" format="enum">
            <enum name="top" value="0" />     <!-- 箭头在上边 -->
            <enum name="bottom" value="1" />  <!-- 箭头在下边 -->
            <enum name="left" value="2" />    <!-- 箭头在左边 -->
            <enum name="right" value="3" />   <!-- 箭头在右边 -->
        </attr>
        <!-- 箭头在边上的相对位置（百分比 0~1） -->
        <attr name="bfl_arrowPositionPercent" format="float" />
        <!-- 箭头在边上的对齐方式 -->
        <attr name="bfl_arrowGravity" format="enum">
            <enum name="start" value="0" />   <!-- 靠起始端对齐（比如左或上） -->
            <enum name="center" value="1" />  <!-- 居中对齐 -->
            <enum name="end" value="2" />     <!-- 靠结束端对齐（比如右或下） -->
        </attr>
        <!-- 是否自动给内容设置内边距（避免内容被箭头遮挡） -->
        <attr name="bfl_autoInsetPadding" format="dimension" />
        <!-- 填充颜色（背景色） -->
        <attr name="bfl_fillColor" format="color" />
        <!-- 是否启用渐变填充 渐变开启后阴影不生效 -->
        <attr name="bfl_useGradient" format="boolean" />
        <!-- 渐变起始颜色 -->
        <attr name="bfl_gradientStartColor" format="color" />
        <!-- 渐变结束颜色 -->
        <attr name="bfl_gradientEndColor" format="color" />
        <!-- 渐变角度（0~360度，例如 0 表示从左到右） -->
        <attr name="bfl_gradientAngle" format="float" />
        <!-- 渐变颜色数组 用英文逗号“,”拼接 只要设置了就覆盖bfl_gradientStartColor与bfl_gradientEndColor -->
        <attr name="bfl_gradientColors" format="string" />
        <!-- 渐变位置数组 用英文逗号“,”拼接 -->
        <attr name="bfl_gradientPositions" format="string" />
        <!-- 边框颜色 -->
        <attr name="bfl_strokeColor" format="color" />
        <!-- 边框宽度 -->
        <attr name="bfl_strokeWidth" format="dimension" />
        <!-- 边框虚线：单个线段的长度 -->
        <attr name="bfl_dashWidth" format="dimension" />
        <!-- 边框虚线：线段之间的间隔 -->
        <attr name="bfl_dashGap" format="dimension" />
        <!-- 边框虚线：偏移量（虚线的起始相位） -->
        <attr name="bfl_dashPhase" format="dimension" />
        <!-- 背景透明度（0.0 完全透明，1.0 不透明） -->
        <attr name="bfl_backgroundAlpha" format="float" />
        <!-- 内容统一内边距 -->
        <attr name="bfl_contentPadding" format="dimension" />
        <!-- 内容左边距 -->
        <attr name="bfl_contentPaddingLeft" format="dimension" />
        <!-- 内容上边距 -->
        <attr name="bfl_contentPaddingTop" format="dimension" />
        <!-- 内容右边距 -->
        <attr name="bfl_contentPaddingRight" format="dimension" />
        <!-- 内容下边距 -->
        <attr name="bfl_contentPaddingBottom" format="dimension" />
        <!-- 阴影模糊半径 -->
        <attr name="bfl_shadowRadius" format="dimension" />
        <!-- 阴影在 X 方向上的偏移量 -->
        <attr name="bfl_shadowDx" format="dimension" />
        <!-- 阴影在 Y 方向上的偏移量 -->
        <attr name="bfl_shadowDy" format="dimension" />
        <!-- 阴影颜色（可选） -->
        <attr name="bfl_shadowColor" format="color" /> <!-- optional -->
        <!-- 阴影柔和度（越大越模糊，一般比 radius 更细腻的控制） -->
        <attr name="bfl_shadowSoftness" format="dimension" />
        <!-- 是否隐藏箭头（true = 不绘制箭头） -->
        <attr name="bfl_hideArrow" format="boolean" />

    </declare-styleable>

</resources>